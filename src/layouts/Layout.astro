---
import Attribution from "../components/Attribution.astro";
import "../styles/globals.css";
export interface Props {
	title: string;
}

const { title } = Astro.props;

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Root from "./Root.astro";
import Hero from "../components/Hero.astro";
---

<Root title={title}>
  <div class="flex flex-col min-h-screen justify-between relative content-stretch">
    <Header />
    <Hero/>
    <main class="flex justify-center 2xl:text-xl w-screen">
      <div id="main" class="max-w-6xl flex flex-col gap-4 overflow-x-clip flex-1">
        <slot />
      </div>
    </main>

    <Footer />
  </div>
  <Attribution />
</Root>
